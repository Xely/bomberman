<Window x:Class="wpfBomberman.WelcomeMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfBomberman"
        mc:Ignorable="d"
        Title="Welcome" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="btnStart" Click="btnStart_Click" Content="Start" Grid.Row="1" Grid.Column="0" />
        <Button x:Name="btnAdmin" Click="btnAdmin_Click" Content="Admin"  Grid.Row="1" Grid.Column="1" />
        
        
    </Grid>
</Window>
